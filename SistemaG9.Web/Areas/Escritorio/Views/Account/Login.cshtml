@model SistemaG9.Web.ViewModels.LoginViewModel

@{
    Layout = "~/Areas/Escritorio/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Escritório Virtual";
}

<style>
    body {
        padding-top: 60px;
        background-color: transparent;
    }

    .panel-heading {
        padding: 5px 15px;
    }

    .panel-footer {
        padding: 1px 15px;
        color: #A0A0A0;
    }

    .profile-img {
        width: 100px;
        height: 100px;
        margin: 0 auto 10px;
        display: block;
        -moz-border-radius: 50%;
        -webkit-border-radius: 50%;
        -ms-border-radius: 50%;
        border-radius: 50%;
    }
</style>

<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            @*<div class="center-block">
                    <span><img class="img-responsive" src="~/img/SistemaG9_logo.png" alt="" /></span>
                </div>*@

            @if (TempData["SuccessMail"] != null)
            {
                <div class="alert alert-info alert-dismissable fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="text-center">
                        <p>A T E N Ç Ã O !!!</p>
                        <p>
                            E-mail enviado com sucesso. <br />
                            Verifique seu e-mail, caso não esteja em Caixa de Entrada, veja no Lixo Eletrônico, ou Caixa de Span.
                        </p>
                    </h4>
                </div>
            }

            <div class="panel">
                <div class="panel-heading text-center">
                    <h3><strong> Login de Acesso </strong></h3>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <fieldset>
                            <div class="row">
                                <div class="center-block">
                                    <span><img class="profile-img" src="~/img/photo.jpg" alt="" /></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <div class="input-group input-md">
                                            <span class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </span>
                                            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @autofocus = "autofocus", @onfocus = "this.value=''", @placeholder = "Login do Usuário", @title = "Login de acesso" })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon input-md">
                                                <i class="fa fa-lock"></i>
                                            </span>
                                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Senha", title = "Senha de acesso" })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                                    </div>
                                    @*<div class="form-group">
                                            <input type="submit" class="btn btn-success btn-block" value="Entrar">
                                        </div>*@
                                    <div class="form-group">
                                        @*<div class="col-md-offset-1 col-md-10">*@
                                        <input type="submit" value="Entrar" class="btn btn-success pull-left" />
                                        <span class="pull-right">
                                            <label style="margin-top:10px;">
                                                <a href="@Url.Action("RecuperarSenha", "Account")">Esqueceu a senha?</a>
                                            </label>
                                        </span>
                                        @*</div>*@
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
                <div class="panel-footer ">
                    @*@Html.Partial("_Footer")*@
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}