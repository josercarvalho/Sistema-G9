@model IEnumerable<SistemaG9.Domain.Models.Rede>

@{
    ViewBag.Title = "Matriz";
    Layout = "~/Areas/Escritorio/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border ">
            <div class="col-md-7 col-xs-8">
                <h3 class="box-title"><i class="fa fa-group"></i> Matrix Completa</h3>
            </div>
            <div class="box-tools pull-right">
                @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-warning", @title = "Tela Inicial" })
            </div>
        </div>

        <div class="box-body">
            <table class="table table-hover table-responsive" id="tbl-matrix">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Posicao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nivel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Login)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cliente.Nome)
                        </th>
                        <th>
                            @Html.DisplayName("Login Redebedor")
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Posicao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nivel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apelido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cliente.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApelidoRecebedor)
                                @*@Html.ActionLink( @item.ApelidoRecebedor, "DetelheCliente", "Rede", new { id=item.ClienteId }, new { @class="modal-link" , @title="Visualizar dados do Cliente" } )*@
                            </td>

                            <td>
                                @if (item.Status.Equals(1))
                                {
                                    @Html.DisplayName("ATIVO")
                                }
                                else
                                {
                                    @Html.DisplayName("INATIVO")
                                }
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</section>

