@model IEnumerable<SistemaG9.Domain.Models.Doacoes>

@{
    ViewBag.Title = "Realizadas";
    Layout = "~/Areas/Escritorio/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border ">
            <div class="col-md-7 col-xs-8">
                <h3 class="box-title">Doações Realizadas</h3>
            </div>
            <div class="col-md-5 col-sm-3 text-right">
                @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-sm btn-warning", @title = "Tela Inicial" })
            </div>
        </div>

        <div class="box-body">

            @if (!@Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h4>Por enquanto não há PAGAMENTOS, volte mais tarde ou divulgue mais</h4>
                </div>
            }
            else
            {
                <table class="table table-striped table-hover table-condensed table-border">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Cliente.Login)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Matriz.Nome)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Nivel)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recebedor)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Valor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataCadastro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ConfirmaDoacao)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cliente.Login)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Matriz.Nome)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nivel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Recebedor)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Tipo)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Valor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataCadastro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConfirmaDoacao)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>