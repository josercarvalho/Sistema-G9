@model IEnumerable<SistemaG9.Domain.Models.Rede>

@{
    ViewBag.Title = "Meus Logins";
    Layout = "~/Areas/Escritorio/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border ">
            <div class="col-md-7 col-xs-8">
                <h3 class="box-title">Meus Logins</h3>
            </div>
            <div class="col-md-5 col-sm-3 text-right">
                @*@Html.ActionLink("Criar Reentradas", "Create", null, new { @class = "btn btn-success", @Title = "Cadastrar" })*@
                @*<button id="btn-Reentradas" class="btn btn-success" data-id="model.Clienteid" title="Criar Reentradas">Criar Reentradas</button>*@
                @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-sm btn-warning", @title = "Tela Inicial" })
            </div>
        </div>

        <div class="box-body">
            <table class="table table-hover table-bordered table-responsive">
                <tr>
                    <th>Login</th>
                    <th>Upline</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apelido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApelidoRecebedor)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>

