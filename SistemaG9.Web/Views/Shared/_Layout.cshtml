<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Sistema para controle de Clientes e Doações">
        <meta name="author" content="JCarvalho TI">
        <link href="~/img/sistemaG9.png" rel="shortcut icon" type="image/x-icon" />
        <title>@ViewBag.Title - Rede Sustentável</title>

        <!-- Le styles -->
        <link href="~/Content/bootstrap-Cosmo.min.css" rel="stylesheet" />
        <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
        <link href="~/Content/ionicons.min.css" rel="stylesheet" />
        <link href="~/Content/custom.css" rel="stylesheet" />
        <link href="~/Content/StyleSheet.css" rel="stylesheet" />

        <!-- Le javascript -->
        <!-- Placed at the end of the document so the pages load faster -->
        @Scripts.Render("~/bundles/modernizr")
        @*@Scripts.Render("~/bundles/jquery")*@
        <script src="~/Scripts/jquery-3.1.1.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.mask.js"></script>
        <script src="~/Scripts/MyJS/example.js"></script>
        <script src="~/Scripts/MyJS/MenuFixo.js"></script>

        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Scripts/MyJS/BotaoInicioPagina.js")
        @Scripts.Render("~/Scripts/MyJS/MenuFixo.js")
    </head>
<body>

    <header>
        @Html.Partial("_Topo")
    </header>

    <nav id="menu">
        @Html.Partial("_Menu")
    </nav>

    <section id="corpo" class="container body-content">
        @RenderBody()
        <a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" title="Click para retornar ao topo da página" data-toggle="tooltip" data-placement="left"><span class="glyphicon glyphicon-chevron-up"></span></a>
    </section>

    <footer id="footer">
        @Html.Partial("_Rodape")
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
