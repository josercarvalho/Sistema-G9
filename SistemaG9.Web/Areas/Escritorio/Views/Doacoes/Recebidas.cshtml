@model IEnumerable<SistemaG9.Domain.Models.Doacoes>

@{
    ViewBag.Title = "Doações Recebidas";
    Layout = "~/Areas/Escritorio/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border ">
            <div class="col-md-7 col-xs-8">
                <h3 class="box-title">Doações Recebidas</h3>
            </div>
            <div class="col-md-5 col-sm-3 text-right">
                @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-md btn-warning", @title = "Tela Inicial" })
            </div>
        </div>

        <div class="box-body">

            @if (!@Model.Any())
            {
                <h4 class="alert alert-info text-center">Por enquanto não há DOAÇÕES REGISTRADAS a seu favor, volte mais tarde ou divulgue mais</h4>
            }
            else
            {
                <table class="table table-hover table-responsive" id="tbl-recebidas">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Doador)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Matriz.Nome)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Nivel)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recebedor)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Valor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataCadastro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ConfirmaDoacao)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Doador)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Matriz.Nome)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nivel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Recebedor)
                                </td>
                                @*<td>
                                        @if (item.Tipo == 0)
                                        {
                                            @Html.DisplayName("ENTRADA")
                                        }
                                        else
                                        {
                                            @Html.DisplayName("REENTRADA")
                                        }
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Valor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataCadastro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConfirmaDoacao)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div id="divResultado"></div>
</section>

<div id="progress" class="ui-loader" style="top: 270px; left: 553px; display: none;">
    <div class="spin"></div>
    <span>Aguarde ...</span>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#tbl-recebidas").DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
}
